@model MyMvcApp.Models.Teacher
@{
    var all = ViewBag.AllSubjects as List<MyMvcApp.Models.Subject> ?? new List<MyMvcApp.Models.Subject>();
    var assigned = Model.TeacherSubjects.Select(x => x.SubjectId).ToHashSet();
}
<h2>Assign Subjects - @Model.Name</h2>

<form asp-action="AssignSubjects" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        @foreach (var s in all)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="subjectIds" value="@s.Id" id="s_@s.Id" @(assigned.Contains(s.Id) ? "checked" : "") />
                <label class="form-check-label" for="s_@s.Id">@s.Name</label>
            </div>
        }
    </div>
    <button class="btn btn-primary">Save</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
</form>
