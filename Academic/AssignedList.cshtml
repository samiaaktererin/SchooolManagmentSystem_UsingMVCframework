@model IEnumerable<MyMvcApp.Models.TeacherSubject>

@{
    ViewData["Title"] = "Assigned Teachers";
}

<h2 class="mb-3">Assigned Teacher List</h2>

<a asp-action="Assign" class="btn btn-success mb-3">
    + New Assignment
</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Teacher</th>
            <th>Subject</th>
            <th>Class</th>
            <th>Section</th>
            <th style="width:180px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Teacher?.Name</td>
                <td>@x.Subject?.Name</td>
                <td>@x.Classroom?.Name</td>
                <td>@x.Section?.Name</td>
                <td>
                    <a asp-action="EditAssign"
                       asp-route-id="@x.Id"
                       class="btn btn-sm btn-primary">
                        Edit
                    </a>

                    <form asp-action="DeleteAssign"
                          asp-route-id="@x.Id"
                          method="post"
                          style="display:inline">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-sm btn-danger"
                                onclick="return confirm('Delete this assignment?')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
