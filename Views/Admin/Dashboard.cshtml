@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    .dashboard-hero {
        background: linear-gradient(135deg, #198754, #0d6efd);
        color: white;
        padding: 70px 25px;
        border-radius: 14px;
        margin-bottom: 40px;
    }

        .dashboard-hero h1 {
            font-size: 2.6rem;
            font-weight: 700;
        }

    .dashboard-card {
        border-radius: 14px;
        box-shadow: 0 12px 30px rgba(0,0,0,.08);
        transition: all .25s ease;
        overflow: hidden;
    }

        .dashboard-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 40px rgba(0,0,0,.15);
        }

        .dashboard-card img {
            height: 180px;
            object-fit: cover;
        }

        .dashboard-card h5 {
            font-weight: 600;
        }

    .quick-link {
        text-decoration: none;
        color: inherit;
    }
</style>

<!-- ================= HERO ================= -->
<div class="dashboard-hero text-center">
    <h1>Admin Control Panel</h1>
    <p class="fs-5 mt-2">
        CodeCatalyst Secondary School – Smart Automation Dashboard
    </p>
</div>

<!-- ================= DASHBOARD CARDS ================= -->
<div class="row g-4">

    <!-- STUDENTS -->
    <div class="col-md-4">
        <a asp-controller="Students" asp-action="Index" class="quick-link">
            <div class="card dashboard-card h-100">
                <img src="https://images.unsplash.com/photo-1588072432836-e10032774350"
                     alt="Students">
                <div class="card-body text-center">
                    <h5>🎓 Student Management</h5>
                    <p class="text-muted mt-2">
                        Manage student profiles, class, section & enrollment.
                    </p>
                </div>
            </div>
        </a>
    </div>

    <!-- TEACHERS -->
    <div class="col-md-4">
        <a asp-controller="Teachers" asp-action="Index" class="quick-link">
            <div class="card dashboard-card h-100">
                <img src="https://images.unsplash.com/photo-1524995997946-a1c2e315a42f"
                     alt="Teachers">
                <div class="card-body text-center">
                    <h5>👩‍🏫 Teacher Management</h5>
                    <p class="text-muted mt-2">
                        Teacher profiles, attendance, salary & subjects.
                    </p>
                </div>
            </div>
        </a>
    </div>

    <!-- ACADEMIC -->
    <div class="col-md-4">
        <a asp-controller="Academic" asp-action="Index" class="quick-link">
            <div class="card dashboard-card h-100">
                <img src="https://images.unsplash.com/photo-1503676260728-1c00da094a0b"
                     alt="Academic">
                <div class="card-body text-center">
                    <h5>📚 Academic Management</h5>
                    <p class="text-muted mt-2">
                        Subjects, classes, sections & teacher assignment.
                    </p>
                </div>
            </div>
        </a>
    </div>

</div>

<!-- ================= FOOTER NOTE ================= -->
<div class="text-center text-muted mt-5">
    <small>
        © @DateTime.Now.Year CodeCatalyst Secondary School <br />
        Admin Dashboard – School Automation System
    </small>
</div>
