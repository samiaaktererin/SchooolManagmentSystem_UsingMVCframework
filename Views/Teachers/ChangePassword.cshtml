@{
    ViewData["Title"] = "Change Teacher Password";
}

<h3>🔑 Change Password</h3>

<form asp-action="ChangePassword" asp-route-id="@ViewBag.TeacherId" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">
            New Password for <strong>@ViewBag.TeacherName</strong>
        </label>

        <input type="password"
               name="newPassword"
               class="form-control"
               required />
    </div>

    <button type="submit" class="btn btn-primary">
        Update Password
    </button>

    <a asp-action="Details"
       asp-route-id="@ViewBag.TeacherId"
       class="btn btn-secondary">
        Cancel
    </a>
</form>
