@model MyMvcApp.Models.Teacher

@{
    ViewData["Title"] = "Teacher Profile";

    string photoUrl = !string.IsNullOrEmpty(Model.PhotoPath)
        ? Url.Content(Model.PhotoPath)
        : Url.Content("~/images/default-user.png");
}

<h2 class="mb-3">Teacher Profile</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}


<div class="card shadow-sm">
    <div class="card-body d-flex gap-4">

        <!-- PHOTO -->
        <div>
            <img src="@photoUrl"
                 style="width:150px;height:150px;object-fit:cover;border-radius:8px;border:1px solid #ddd;" />
        </div>

        <!-- INFO -->
        <div style="width:100%">
            <h4>@Model.Name</h4>

            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone:</strong> @Model.Phone</p>

            <p>
                <strong>Status:</strong>
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </p>

            <!-- ================= TEACHER ATTENDANCE MARK ================= -->
            @if (User.IsInRole("Teacher"))
            {
                if (ViewBag.AlreadyMarkedToday == true)
                {
                    <div class="alert alert-info mt-3">
                        ✔ You have already marked today’s attendance.
                    </div>
                }
                else
                {
                    <form asp-action="MarkPresent" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-success btn-lg w-100">
                            ✅ Mark Today’s Attendance
                        </button>
                    </form>
                }
            }


            <hr />
            @if (Model.TeacherSubjects != null && Model.TeacherSubjects.Any())
            {
                <h5 class="mt-4">📚 Assigned Subjects</h5>

                <table class="table table-bordered table-sm mt-2">
                    <thead class="table-light">
                        <tr>
                            <th>Subject</th>
                            <th>Class</th>
                            <th>Section</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ts in Model.TeacherSubjects)
                        {
                            <tr>
                                <td>@ts.Subject?.Name</td>
                                <td>@ts.Classroom?.Name</td>
                                <td>@ts.Section?.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted mt-3">
                    No subject assignments found.
                </p>
            }


            <!-- ================= ACTION BUTTONS ================= -->
            <div class="d-flex flex-wrap gap-2 mt-3">

                <!-- Attendance history (Admin + Teacher both) -->
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="AttendanceList"
                       asp-route-id="@Model.Id"
                       class="btn btn-warning btn-sm">
                        📅 Attendance
                    </a>
                }
                


                <!-- Salary VIEW (Admin + Teacher both) -->
                <a asp-action="Salary"
                   asp-route-id="@Model.Id"
                   class="btn btn-info btn-sm">
                    💰 Salary
                </a>

     

                <!-- Edit profile (Admin only) -->
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit"
                       asp-route-id="@Model.Id"
                       class="btn btn-primary btn-sm">
                        ✏ Edit
                    </a>
                    <a asp-action="ChangePassword"
                       asp-route-id="@Model.Id"
                       class="btn btn-warning btn-sm">
                        🔑 Change Password
                    </a>
                }
            </div>

        </div>
    </div>
</div>
