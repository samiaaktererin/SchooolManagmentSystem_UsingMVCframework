@model List<MyMvcApp.Models.TeacherSalary>

@{
    ViewData["Title"] = "Salary";
    var teacher = ViewBag.Teacher as MyMvcApp.Models.Teacher;
}

<h2 class="mb-3">Salary — @teacher?.Name</h2>

<a asp-action="Details"
   asp-route-id="@teacher?.Id"
   class="btn btn-secondary mb-3">
    ← Back to Profile
</a>

@* ================= ADMIN ONLY: ADD SALARY FORM ================= *@
@if (User.IsInRole("Admin"))
{
    <div class="card mb-4">
        <div class="card-header fw-bold">
            Add Salary Payment
        </div>

        <div class="card-body">
            <form asp-action="AddSalary" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="teacherId" value="@teacher?.Id" />

                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Amount</label>
                        <input name="amount" type="number" step="0.01" class="form-control" required />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Salary Month</label>
                        <input name="salaryMonth" type="month" class="form-control" required />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Payment Method</label>
                        <input name="paymentMethod" class="form-control" placeholder="Cash / Bank" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Note</label>
                        <input name="note" class="form-control" />
                    </div>
                </div>

                <button class="btn btn-success mt-3">
                    Save Salary
                </button>
            </form>
        </div>
    </div>
}

@* ================= COMMON: SALARY HISTORY ================= *@
<h4 class="mt-4">Salary History</h4>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No salary records found.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Month</th>
                <th>Amount</th>
                <th>Method</th>
                <th>Paid At</th>
                <th>Note</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.SalaryMonth</td>
                    <td>@s.Amount.ToString("0.00")</td>
                    <td>@s.PaymentMethod</td>
                    <td>@s.PaidAt.ToString("yyyy-MM-dd")</td>
                    <td>@(string.IsNullOrEmpty(s.Note) ? "-" : s.Note)</td>
                </tr>
            }
        </tbody>
    </table>
}
